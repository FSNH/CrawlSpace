{
  "spider": "currency",
  "type": "研峰网站",
  "home": "http://www.infsci.com/",
  "settings": {
    "user-agent": "Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/101.0.4951.64 Safari/537.36",
    "SCHEDULER": "scrapy_redis.scheduler.Scheduler",
    "DUPEFILTER_CLASS": "scrapy_redis.dupefilter.RFPDupeFilter",
    "REDIS_START_URLS_AS_ZSET": true,
    "REDIS_START_URLS_KEY": "infscs:start_urls",
    "SCHEDULER_DUPEFILTER_KEY": "currency:infsc:dupefilter",
    "SCHEDULER_QUEUE_KEY": "currency:infsc:requests"  },
  "start_urls": ["http://www.infsci.com/"],
  "allowed_domains": ["infsci.com"],
  "srules": "infsci_rules",

  "rules": [
    {
      "link_extractor": {
        "allow": "/product_category/\\d+/",
        "restrict_css": "div.yamm-content ul li"
      },
      "callback": "parse_item"
    }
  ],
  "item": {
    "class": "InfsciItem",
    "loader": "ItemLoader",
    "nextpage": true,
    "next_rule": "#paginate_id li a.next::attr('href')",
    "attrs": {
      "source": [
        {
          "method": "value",
          "arg": "infsc"
        }
      ],
      "urls": [
        {
          "method": "css",
          "arg": "table.table tr td:nth-child(1) a::attr(\"href\")"
        }
      ]

    }
  }
}