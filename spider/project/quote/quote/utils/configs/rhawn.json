{
  "spider": "currency",
  "type": "罗恩网站",
  "home": "https://www.rhawn.cn/",
  "settings": {
    "user-agent": "Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/101.0.4951.64 Safari/537.36",
    "SCHEDULER": "scrapy_redis.scheduler.Scheduler",
    "DUPEFILTER_CLASS": "scrapy_redis.dupefilter.RFPDupeFilter",
    "SCHEDULER_PERSIST": true,
    "REDIS_START_URLS_AS_ZSET": true,
    "REDIS_START_URLS_KEY": "luoen:start_urls",
    "STATS_CLASS": "scrapy_redis.stats.RedisStatsCollector",
    "SCHEDULER_DUPEFILTER_KEY": "currency:luoen:dupefilter",
    "SCHEDULER_QUEUE_KEY": "currency:luoen:requests"
  },
  "start_urls": ["https://www.rhawn.cn/"],
  "allowed_domains": ["rhawn.cn"],
  "srules": "luoen_rules",

  "rules": [
    {
      "link_extractor": {
        "restrict_css":".sub-cateory-container.tab-content div ul li.title"
      },
      "follow": true,
      "callback": "parse_item"
    }
  ],
  "item": {
    "class": "QuoteItem",
    "loader": "ItemLoader",
    "nextpage": true,
    "next_rule": "#pagination_next a::attr('href')",
    "attrs": {
      "source": [
        {
          "method": "value",
          "arg": "luoen"
        }
      ],
      "urls": [
        {
          "method": "css",
          "arg": ".data-group.cateory-type ul li div a.photo::attr(\"href\")"
        }
      ]

    }
  }
}